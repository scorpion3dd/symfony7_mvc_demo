{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    {{ 'Log dateils'|trans }}: {{ log.id }}
{% endblock %}

{% block page_title %}
    {{ parent() }}
    <title>{{ log.id }}</title>
{% endblock %}

{% block page_actions %}
    <a class="btn btn-primary action-edit" href="{{ ea_url({'routeName': 'log_edit', 'id': log.id}) }}">{{ 'Edit Log'|trans }}</a>
{% endblock %}

{% block main %}
    {% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="bg-light shadow border rounded-3 p-4">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th style="width: 10%">{{ 'ID'|trans }}:</th>
                        <td style="width: 90%">{{ log.id }}</td>
                    </tr>
                    <tr>
                        <th style="width: 10%">{{ 'Message'|trans }}:</th>
                        <td style="width: 90%">{{ log.message }}</td>
                    </tr>
                    <tr>
                        <th style="width: 10%">{{ 'Priority'|trans }}:</th>
                        <td style="width: 90%">{{ log.priority }}</td>
                    </tr>
                    <tr>
                        <th style="width: 10%">{{ 'Priority name'|trans }}:</th>
                        <td style="width: 90%">{{ log.priorityName }}</td>
                    </tr>
                    <tr>
                        <th style="width: 10%">{{ 'Extra'|trans }}:</th>
                        <td style="width: 90%">{{ log.getExtraString() }}</td>
                    </tr>
                    <tr>
                        <th style="width: 10%">{{ 'Timestamp'|trans }}:</th>
                        <td style="width: 90%"><nobr>{{ log.timestamp|date("Y-m-d H:i:s") }}</nobr></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
